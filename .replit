language = "nodejs"
run = "cd temp_nevin && npx expo start --web --port 5000 --host 0.0.0.0"
modules = ["nodejs-20"]

[deployment]
run = ["sh", "-c", "node server.js"]
deploymentTarget = "static"
build = ["sh", "-c", "npx expo export --platform web"]
publicDir = "dist"

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd temp_nevin && npx expo start --web --port 5000 --host 0.0.0.0"
waitForPort = 5000

[agent]
integrations = ["perplexity_v0:1.0.0", "python_anthropic:1.0.0"]
