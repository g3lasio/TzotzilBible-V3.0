language = "nodejs"
run = "node server.js"
modules = ["nodejs-20"]

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm ci && npx expo export --platform web"]
run = ["sh", "-c", "node server.js"]

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-24_05"
packages = ["zulu11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web"

[[workflows.workflow]]
name = "Expo Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
integrations = ["perplexity_v0:1.0.0", "python_anthropic:1.0.0"]
